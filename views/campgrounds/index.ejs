<% include ../partials/header %>

<div class="container"> <!-- Bootstrap class for grid container -->
		
	<header id="header" class="jumbotron"> <!-- Bootstrap class for nice headers -->
		<div class="container">	
			<h1 class="display-4"><span class="ion-map"></span>Yelp Campgrounds List</h1>
			<p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>List of our CampGrounds:</h3>
		</div>
		<div class="card-deck">
			<% campgrounds.forEach(function(campground) { %>
				<div class="card">
					<!-- _id = automaticaly generated MongoDB object id -->
					<a href="/campgrounds/<%= campground._id %>">
						<img class="card-img-top" src="<%= campground.image %>">
						<div class="card-body">
							<h5 class="card-title"><%= campground.name %></h5>
						</div>
					</a>
				</div>
			<% }); %>
		</div>
	</div>
</div>

<% include ../partials/footer %>