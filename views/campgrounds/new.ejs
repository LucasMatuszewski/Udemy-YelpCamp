<% include ../partials/header %>

<div class="container">
	
	<div class="row justify-content-center">
		<h1>Add a new Campground</h1>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6 col-sm-6">
			<form action="/campgrounds" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="newCampName" placeholder="Campground name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newCampImage" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newCampDesc" placeholder="Description of new campground">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="newCampPrice" placeholder="Price per a night in this campground in USD">
				</div>
				<button class="btn btn-lg btn-primary btn-block" type="submit">Add a New Campground</button>
			</form>
			<a href="/campgrounds"><< Go Back</a>	
		</div>	
	</div>

</div>

<% include ../partials/footer %>