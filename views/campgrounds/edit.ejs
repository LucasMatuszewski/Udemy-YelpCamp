<% include ../partials/header %>

<div class="container">
	
	<div class="row justify-content-center">
		<h1>Edit a Campground</h1>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6 col-sm-6">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Campground name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="campground[description]" placeholder="Description of new campground"><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" min="0.00" step="0.01" name="campground[price]" placeholder="Price per a night in this campground in USD" value="<%= campground.price %>">
				</div>
				<button class="btn btn-lg btn-primary btn-block" type="submit">Edit a Campground</button>
			</form>
			<a href="/campgrounds"><< Go Back</a>	
		</div>	
	</div>

</div>

<% include ../partials/footer %>