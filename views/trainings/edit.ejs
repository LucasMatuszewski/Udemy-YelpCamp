<% include ../partials/header %>

<div class="container">
	
	<div class="row justify-content-center">
		<h1>Edit a Training</h1>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6 col-sm-6">
			<form action="/trainings/<%= training._id %>?_method=PUT" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="training[name]" placeholder="Training name" value="<%= training.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="training[urlAddress]" placeholder="URL address for this training, e.g.: excel-sredni" value="<%= training.urlAddress %>">
				</div>
				<div class="form-group">
					<select class="form-control" name="training[active]">
						<!-- MAKE A DEFOULT SELLECTION FROM DB -->
						<option value="1">TAK</option>
						<option value="0">NIE</option>
					</select>
				</div>
				<!-- category: String, ??????? -->
				<div class="form-group">
					<select class="form-control" name="training[subcategory]">
						<!-- MAKE A DEFOULT SELLECTION FROM DB -->
						<option value="">Select a category:</option>
						<optgroup label="MS Office">
							<option value="ms-excel">MS Excel</option>
							<option value="ms-word">MS Word</option>
							<option value="ms-powerpoint">MS PowerPoint</option>
							<option value="ms-outlook">MS Outlook</option>
							<option value="ms-access">MS Access</option>
							<option value="ms-project">MS Project</option>
						</optgroup>
						<optgroup label="Programming">
							<option value="vba">VBA</option>
						</optgroup>
						<option value="others">Others</option>
					</select>
				</div>
				<div class="form-group">
					<input class="form-control" type="url" name="training[image]" placeholder="Image URL" value="<%= training.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[shortDesc]" rows="2" placeholder="Short Description of a new training (for SEO and list of trainings)"><%= training.shortDesc %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[description]" rows="8" placeholder="Description of new training"><%= training.description %></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" min="0.00" step="0.01" name="training[price]" placeholder="Price per a person for this training (in USD)" value="<%= training.price %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[audience]" placeholder="Audence of a new training"><%= training.audience %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[goals]" placeholder="Goals of a new training"><%= training.goals %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[benefits]" placeholder="Benefits of a new training"><%= training.benefits %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[methodology]" placeholder="Methodology of a new training"><%= training.methodology %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="training[sylabus]" rows="8" placeholder="Sylabus / Agenda of a new training"><%= training.sylabus %></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="training[keywords]" placeholder="Keywords / tags for searching" value="<%= training.keywords %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" min="0.00" step="1.00" name="training[promotion]" placeholder="Promotion Points (higher = top of the list)" value="<%= training.promotion %>">
				</div>

				<button class="btn btn-lg btn-primary btn-block" type="submit">Edit a Training</button>
			</form>
			<a href="/trainings"><< Go Back</a>	
		</div>	
	</div>

</div>

<% include ../partials/footer %>